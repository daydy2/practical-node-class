<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/addBook.css">
<link rel="stylesheet" href="/css/book.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (prods.length < 1) { %>
                <form method="POST" class="addBook searchForm" action="/search">
                    <div class="searchby">
                        <label for="isbn">Search By ISBN</label>
                        <input type="text" id="isbn" name="isbn">
                        <button class="btn" type="submit">Submit for Isbn</button>
                    </div>
                </form>
                <form method="POST" class="addBook searchForm" action="/searchbyauthor">
                    <div class="searchby">
                        <label for="author">Search By Author</label>
                        <input type="text" id="author" name="author">
                        <button class="btn" type="submit">Submit for Author</button>
                    </div>
                </form>
                <form method="POST" class="addBook searchForm" action="/searchbytitle">
                    <div class="searchby">
                        <label for="title">Search By Title</label>
                        <input type="text" id="title" name="title">
                        <button class="btn" type="submit">Submit for title</button>
                    </div>
                </form>
            <% } else { %>
                
                <div class="bookContainer">
                    <% for (let book of prods) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="book__title"><%= book.title %></h1>
                            </header>                        
                            <div class="card__content">
                                <h2 class="book__author">By: <%= book.author %></h2>
                                <p class="book__isbn"><span>ISBN: </span> <%= book.isbn %></p>
                                <p class="book__review"> <span>Review: </span> <%= book.review %></p>                            
                            </div>
                            
                        </article>
                    <% } %>
                </div>
            
                 
            <% } %>
            
        </main>
        

<%- include('../includes/end.ejs') %>
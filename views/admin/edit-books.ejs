<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/addBook.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
       <main>
            <form method="POST" class="addBook searchForm" action="/add-book">
                <label for="title">Title</label>
                <input 
                type="text" 
                id="title" 
                name="title"
                value="<=% book.title %>"
                >
                <label for="isbn">ISBN</label>
                <input 
                type="text" 
                id="isbn" 
                name="isbn"
                value="<=% book.isbn %>"
                >
                <label for="author">Author</label>
                <input 
                type="text" 
                id="author" 
                name="author"
                value="<=% book.author %>"
                >
                <label for="review">Review</label>
                <textarea 
                name="review" 
                id="review" 
                cols="50" 
                rows="10"
                value="<=% book.review %>"
                ></textarea>
                <button class="btn" type="submit">Submit</button>
            </form>
        
       </main>

<%- include('../includes/end.ejs') %>